let 
  server : Chan (?Int.?Int.!Int.wait) -[ u 1 ]→ Unit
  server c =
    let x = recv &c in
    let y = recv &c in
    send (x + y) &c;
    wait c
in

let
  client : Chan (!Int.!Int.?Int.close) -[ u 1 ]→ Unit
  client c =
    send 1 &c;
    send 2 &c;
    print (recv &c);
    close c
in

let c1, c2 = new (!Int.!Int.?Int.close) in
fork (server c2);
client c1
